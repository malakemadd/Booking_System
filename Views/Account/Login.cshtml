@model MVCBookingFinal_YARAB_.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container mb-5">


<h1>Login</h1>


<hr />
<div class="row form col-6 loginform">
    <div class="col-md-8">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsernameOrEmail" class="control-label fw-bold"></label>
                <input asp-for="UsernameOrEmail" class="form-control" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Password" class="control-label fw-bold"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
            <div class="form-group ">
                <input type="submit" value="Log In" class="btn btn-primary col-12" />
            </div>
        </form>
    <div class="linkcontainer col-8">
        <div class="Externallogincontainer">
        <a asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Google" class="text-center"><i class="fa-brands fa-google googleicon btn btn-primary text-center"></i></a>              
        <a asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Facebook" class="text-center"><i class="fa-brands fa-facebook-f googleicon btn btn-primary text-center"></i></a>
        </div>
        
        <div class="forgetlinks">
            <a asp-action="Register">Don't Have an Account? register Now!</a>
            <br />
            <a asp-action="ForgetPassword">Forget Password</a>
        </div>
    </div>
    </div>

</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
