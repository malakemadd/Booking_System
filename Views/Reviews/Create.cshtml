@model MVCBookingFinal_YARAB_.ViewModels.ReviewViewModel

@{
    ViewData["Title"] = "Create Review";
}

<hr />
<div class="row justify-content-center">
    <div class="card shadow-lg p-4 rounded-4" style="width: 450px; background-color: #f8f9fa; border: none;">
        <h2 class="text-center mt-3 ">Add a New Review</h2>
        <hr />
        
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="HotelId" class="form-label fw-bold">Hotel Name</label>
                <select asp-for="HotelId" class="form-select border-2" asp-items="ViewBag.Hotel"></select>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="form-label fw-bold"></label>
                <input asp-for="Rating" class="form-control border-2" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control border-2" placeholder="Enter your review..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group d-grid gap-2">
                <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm w-100">Create</button>
            </div>
           
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

