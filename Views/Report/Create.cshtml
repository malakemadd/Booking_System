@model MVCBookingFinal_YARAB_.Models.Report

@{
    ViewData["Title"] = "Create Report";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 bg-white rounded">
        <h2 class="text-center " style="color:#1a374d">Add a New Report</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="HotelId" class="form-label fw-bold">Hotel Name</label>
                        <select asp-for="HotelId" class="form-select" asp-items="ViewBag.HotelId"></select>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Complaint" class="form-label fw-bold"></label>
                        <textarea asp-for="Complaint" class="form-control" rows="4" placeholder="Enter complaint details..."></textarea>
                        <span asp-validation-for="Complaint" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2" style="height:50px">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Submit Report</button>
                        
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        max-width: 600px;
        margin: auto;
    }

    .btn-primary {
        background-color: #1a374d;
        border-color: #1a374d;
    }

        .btn-primary:hover {
            background-color: #406882;
            border-color: #406882;
        }
</style>
