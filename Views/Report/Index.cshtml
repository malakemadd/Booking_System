@model IEnumerable<MVCBookingFinal_YARAB_.Models.Report>

@{
    ViewData["Title"] = "Reports";
}

<h1 class="text-center mt-4 ">Hotel Reports</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        
        <a asp-action="Create" class="btn btn-primary" style="margin-left:50px;">➕Add Report</a>
    </div>

    <div class="container mt-4 shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <table class=" table table-striped table-hover table-rounded ">
                <thead class="custom-row">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Hotel)</th>
                        <th>@Html.DisplayNameFor(model => model.User.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Complaint)</th>
                        <th>@Html.DisplayNameFor(model => model.ReviewDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Hotel.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Complaint)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReviewDate)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"> <i class="fas fa-edit"></i> </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"> <i class="fas fa-eye"></i> </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"> <i class="fas fa-trash"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
    h1 {
        font-weight: bold;
    }
    table {
        background-color: white;
        width: 100%
    }

    .table-rounded {
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-rounded th:first-child {
            border-top-left-radius: 10px;
        }

        .table-rounded th:last-child {
            border-top-right-radius: 10px;
        }

    .custom-row th {
        text-align: left; /* Center text in header */
        background-color: #1a374d;
        color: white;
        font-weight: bold;
        /* font-family: Arial, Helvetica, sans-serif */
    }


    td {
        text-align: left;
    }

    .container {
        max-width: 92%
    }

    .btn {
        border-radius: 8px;
        margin-left: 10px;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .btn-group .btn {
        margin: 2px;
    }

</style>